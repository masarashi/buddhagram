<h1>ユーザー情報</h1>

<div>
  <%= @user.name %>
</div>

<div>
  <%= @user.profile %>
</div>

<% if @user == current_user %>
  <div>
    <%= link_to 'プロフィール変更', edit_user_registration_path %>
  </div>
<% end %>

<div>
  <%= render 'relationships/follow_form' if user_signed_in? %>
</div>

<% @user ||= current_user %>
<div>
  <span><b>投稿数：</b><%= @user.posts.count %></span>
  <a href="<%= following_user_path(@user) %>">
    <strong id="following">
      <%= @user.following.count %>
    </strong>
    following
  </a>
  <a href="<%= followers_user_path(@user) %>">
    <strong id="followers">
      <%= @user.followers.count %>
    </strong>
    followers
  </a>
</div>

<h2>投稿一覧</h2>

<div>
  <%= render partial: 'users/post', collection: @posts %>
</div>