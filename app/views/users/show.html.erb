<div class="container">
  <%= render "users/profile" %>

  <% @user ||= current_user %>
  <div class="d-flex mt-5">
    <div>
      <%= link_to @user do %>
        投稿<%= @user.posts.count %>件
      <% end %>
    </div>
    <div class="ml-5">
      <%= link_to following_user_path(@user) do %>
        フォロー中<span id="following"><%= @user.following.count %>人
      <% end %>
    </div>
    <div class="ml-5">
      <%= link_to followers_user_path(@user) do %>
        フォロワー<span id="followers"><%= @user.followers.count %></span>人
      <% end %>
    </div>
  </div>

  <hr>

  <div class="jscroll">
    <div class="row">
      <%= render partial: "users/post", collection: @posts %>
      <span class="d-none"><%== pagy_nav(@pagy) %></span>
    </div>
  </div>
</div>

<script>
  $(function() {
    $('.jscroll').jscroll({
      loadingHtml: '読み込み中',
      contentSelector: '.jscroll',
      nextSelector: 'span.next:last a'
    });
  });
</script>
