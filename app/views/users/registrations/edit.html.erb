<h2><%= t('.title', resource: resource.model_name.human) %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="form-group row">
    <div class="col-sm-3 profile">
      <div class="profile__left__side">
        <div class="profile__figure">
          <%= image_tag resize180(@user.image), class: "profile__image" %>
        </div>
      </div>
    </div>
    <div>
      <%= f.file_field :image, accept: "image/jpeg,image/gif,image/png", class: "col-sm-9 form-control-file" %>
    </div>
  </div>
  
  <div class="form-group row">
    <%= f.label :name, class: "col-sm-3 col-form-label" %>
    <%= f.text_field :name, :placeholder => "32文字以内", autocomplete: "name", class: "col-sm-9 form-control" %>
  </div>

  <div class="form-group row">
    <%= f.label :profile, class: "col-sm-3 col-form-label" %>
    <%= f.text_area :profile, :placeholder => "256文字以内", rows: "6", class: "col-sm-9 form-control"  %>
  </div>

  <div class="form-group row">
    <%= f.label :email, class: "col-sm-3 col-form-label" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col-sm-9 form-control" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div><%= t('.currently_waiting_confirmation_for_email', email: resource.unconfirmed_email) %></div>
  <% end %>

  <div class="form-group row">
    <div class="col-sm-3">
      <%= f.label :password, class: "col-form-label" %>
      <% if @minimum_password_length %>
        <%= t('devise.shared.minimum_password_length', count: @minimum_password_length) %>
      <% end %>
    </div>
    <%= f.password_field :password, autocomplete: "new-password", :placeholder => "空欄の場合は変更されません", class: "col-sm-9 form-control" %>
  </div>

  <div class="form-group row">
    <%= f.label :password_confirmation, class: "col-sm-3 col-form-label" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", :placeholder => "変更する場合はもう一度入力してください", class: "col-sm-9 form-control" %>
  </div>

  <div class="form-group row">
    <div class="col-sm-3"></div>
    <%= f.submit t('.update'), class: "col-sm-2 btn btn-outline-info btn-block" %>
  </div>
<% end %>

<h3><%= t('.cancel_my_account') %></h3>

<p>
  <%#= t('.unhappy') %>
  <%= button_to t('.cancel_my_account'), registration_path(resource_name), data: { confirm: t('.are_you_sure') }, method: :delete, class: "btn btn-outline-danger btn-block" %>
</p>

<%= link_to t('devise.shared.links.back'), :back, class: "btn btn-outline-secondary btn-block" %>
