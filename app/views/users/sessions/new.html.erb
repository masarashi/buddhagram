<h2><%= t('.sign_in') %></h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-group row">
    <%= f.label :email, class: "col-sm-3 col-form-label" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col-sm-9 form-control" %>
  </div>

  <div class="form-group row">
    <%= f.label :password, class: "col-sm-3 col-form-label" %>
    <%= f.password_field :password, autocomplete: "current-password", class: "col-sm-9 form-control" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="form-group row">
      <div class="col-sm-3"></div>
      <div class="col-sm-9">
        <div class="form-check">
          <%= f.check_box :remember_me, class: "form-check-input" %>
          <%= f.label :remember_me, class: "form-check-label" %>
        </div>
      </div>
    </div>
  <% end %>

  <div class="form-group row mt-3">
    <div class="col-sm-3"></div>
    <%= f.submit t('.sign_in'), class: "col-sm-2 btn btn-outline-info btn-block" %>
  </div>
<% end %>

<%= render "users/shared/links" %>
