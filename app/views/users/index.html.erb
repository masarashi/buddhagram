<div class="container">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>ユーザ名</th>
        <th>Eメール</th>
        <th>管理者権限</th>
        <th>操作</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= link_to user.name, user %></td>
          <td><%= user.email %></td>
          <td><%= user.admin %></td>
          <td><%= link_to "削除", user, method: :delete, data: { confirm: "本当に削除しますか？"}, class: "btn btn-danger btn-sm" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%#== pagy_bootstrap_nav(@pagy) %>
</div>
