<div class="container">
  <%= render "users/profile" %>

  <% @user ||= current_user %>
  <div class="d-flex mt-5">
    <div>
      <%= link_to @user do %>
        投稿<%= @user.posts.count %>件
      <% end %>
    </div>
    <div class="ml-5">
      <%= link_to following_user_path(@user) do %>
        フォロー中<%= @user.following.count %>人
      <% end %>
    </div>
    <div class="ml-5">
      <%= link_to followers_user_path(@user) do %>
        フォロワー<span id="followers"><%= @user.followers.count %></span>人
      <% end %>
    </div>
  </div>

  <hr>

  <% if @users.any? %>
    <div id="user_list">
      <%= render 'users/user_list' %>
    </div>
  <% end %>
</div>
