<div>
  <%= form_with url: "/search/search", method: :get do |f| %>
    <div>
      <%= f.label "search", class: "d-none" %>
      <p class="text-sm-gray">仏像、地名、住所、ユーザ、ハッシュタグ</p>
      <div class="row">
        <div class="col-10 pr-0">
          <%= f.text_field :search_keyword, :placeholder => "検索ワード", rows: "1", class: "search__textfield" %>
        </div>
        <div class="col-2 pl-0">
          <%= f.submit "検索", class: "search__btn" %>
        </div>
      </div>
    </div>
  <% end %>

  <div id="search_result">
    <% unless @spots_search_result %>
      <%= render "search/result" %>
    <% end %>
  </div>
</div>
