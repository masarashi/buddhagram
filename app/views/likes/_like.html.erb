<% if user_signed_in? %>
  <% if current_user.already_liked?(post) %>
    <%= link_to post_like_path(post, post.likes), method: :delete, remote: true do %>
      <i class='fas fa-heart fa-fw' style='color: #ff1493'></i>
    <% end %>
    <%#= post.likes.count %>
  <% else %>
    <%= link_to post_likes_path(post), method: :post, remote: true do %>
      <i class='far fa-heart fa-fw'></i>
    <% end %>
    <%#= post.likes.count %>
  <% end %>
<% end %>