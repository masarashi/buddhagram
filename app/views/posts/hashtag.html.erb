<h1>#<%= @hashtag.name %></h1>

<div class="mt-5">
  投稿<%= @posts_count %>件
</div>

<hr>

<div>
  <h5 class="mt-5">人気の投稿</h5>
  <div class="row">
    <%= render partial: "users/post", collection: @popular_posts %>
  </div>
  <h5 class="mt-5">最新の投稿</h5>
  <div class="jscroll">
    <div class="row">
      <%= render partial: "users/post", collection: @latest_posts %>
      <span class="d-none"><%== pagy_nav(@pagy) %></span>
    </div>
  </div>
</div>

<script>
  $(function() {
  $('.jscroll').jscroll({
    loadingHtml: '読み込み中',
    contentSelector: '.jscroll',
    nextSelector: 'span.next:last a'
  });
});
</script>

