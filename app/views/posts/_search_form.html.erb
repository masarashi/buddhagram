<div class="post__form">
  <p class="mt-5">投稿場所を検索</p>
  <%= form_with url: "/posts/search", method: :get do |f| %>
    <div>
      <%= f.label "キーワードで探す", class: "d-none" %>
      <div class="row">
        <div class="col-10 pr-0">
          <%= f.text_field :search_keyword, :placeholder => "キーワード", rows: "1", class: "search__textfield" %>
        </div>
        <div class="col-2 pl-0">
          <%= f.submit "検索", class: "search__btn" %>
        </div>
      </div>
    </div>
  <% end %>

  <div id="search_result">
    <% unless @spots_search_result %>
      <%= render "posts/search_result" %>
    <% end %>
  </div>

  <div class="mt-4 mb-1 text-center">
    <%= link_to "場所を追加しない", new_post_path, class: "btn btn-info btn-block" %>
  </div>
</div>
