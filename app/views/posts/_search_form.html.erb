<div>
  <div class="mt-2">
    <%= link_to "場所を追加しない", new_post_path, class: "btn btn-secondary btn-block" %>
  </div>

  <h6 class="mt-5">投稿場所を検索</h6>
  
  <%= form_with url: "/posts/search", method: :get do |f| %>
    <div class="form-group">
      <%#= f.label :キーワードで探す %>
      <%= f.text_area :search_keyword, :placeholder => "地名や住所を入力してください", class: "form-control", rows: "1" %>
    </div>
    <div>
      <%= f.submit "検索", class: "btn btn-secondary btn-block" %>
    </div>
  <% end %>

  <div id="search_result">
    <% unless @spots_search_result %>
      <%= render "posts/search_result" %>
    <% end %>
  </div>
</div>
